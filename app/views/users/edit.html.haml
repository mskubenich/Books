=provide(:title, 'Edit profile')
.row.hero-unit
  .span6.offset4
    %h2 Update your profile
    = form_for(@user) do |f|
      = render 'shared/error_messages'
      .field_label= f.label :name
      = f.text_field :name
      .field_label= f.label :email
      = f.text_field :email
      .field_label= f.label :password
      = f.password_field :password
      .field_label= f.label :password_confirmation, "Confirm Password"
      = f.password_field :password_confirmation
      %p= f.file_field :avatar
      = f.submit "Save changes", class: "btn btn-large btn-primary"